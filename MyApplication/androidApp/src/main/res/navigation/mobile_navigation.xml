<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_car">

    <fragment
        android:id="@+id/nav_car"
        android:name="com.kmm.android.ui.car.CarFragment"
        android:label="@string/menu_car"
        tools:layout="@layout/fragment_car">
        <action
            android:id="@+id/action_nav_car_to_nav_add_car"
            app:destination="@id/nav_add_car">
            <argument
                android:name="car_id"
                android:defaultValue="0L"
                app:argType="long" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/nav_add_car"
        android:name="com.kmm.android.ui.car.AddCarFragment"
        android:label="@string/menu_add_car"
        tools:layout="@layout/fragment_add_car">
        <argument
            android:name="car_id"
            android:defaultValue="0L"
            app:argType="long" />
    </fragment>


    <fragment
        android:id="@+id/nav_car_image"
        android:name="com.kmm.android.ui.car.CarImageFragment"
        android:label="@string/menu_car_image"
        tools:layout="@layout/fragment_car_image" />
</navigation>